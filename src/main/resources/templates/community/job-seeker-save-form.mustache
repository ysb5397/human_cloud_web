{{> layout/header}}

<div class="mx-auto max-w-3xl text-left mt-10">
    <form action="/community/job-seeker-save-form" method="post">
        <h1 class="text-3xl font-bold text-gray-900">새 글 작성</h1>
        <div class="mt-6">
            <label for="category" class="block text-base font-medium leading-6 text-gray-900">카테고리</label>
            <select id="category" name="category" class="mt-2 block w-full rounded-md border-0 py-2 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm">
                <option value="it_info">IT 정보</option>
                <option value="free_talk">자유 게시판</option>
                <option value="qna">질문/답변</option>
            </select>
        </div>

        <div class="mt-6">
            <label for="title" class="block text-base font-medium leading-6 text-gray-900">제목</label>
            <input type="text" name="title" id="title" class="mt-2 block w-full rounded-md border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600" placeholder="제목을 입력하세요">
        </div>
        {{#message.title}}
            <div class="mt-2 rounded-md border-l-4 border-red-500 bg-red-50 p-3">
                <div class="flex items-center gap-x-3">
                    <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                    </svg>
                    <p class="text-sm font-medium text-red-700">
                        {{message.title}}
                    </p>
                </div>
            </div>
        {{/message.title}}

        <div class="mt-6">
            <label for="content" class="block text-base font-medium leading-6 text-gray-900">내용</label>
            <textarea id="content" name="content" rows="10" class="mt-2 block w-full rounded-md border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600" placeholder="내용을 입력하세요..."></textarea>
        </div>
        {{#message.content}}
            <div class="mt-2 rounded-md border-l-4 border-red-500 bg-red-50 p-3">
                <div class="flex items-center gap-x-3">
                    <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                    </svg>
                    <p class="text-sm font-medium text-red-700">
                        {{message.content}}
                    </p>
                </div>
            </div>
        {{/message.content}}

        <div class="flex justify-end gap-x-4 pt-4 border-t border-gray-200">
            <a href="/community/job-seeker" class="rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                취소
            </a>
            <button type="submit" class="rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">
                등록하기
            </button>
        </div>
    </form>
</div>

{{> layout/footer}}