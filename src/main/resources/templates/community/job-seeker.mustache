<script>
    function likePost(selectedPost) {
        // 1. 클릭된 요소(<button>) 안에서 카운트를 표시하는 span을 찾습니다.
        const interestCountElement = selectedPost.querySelector('.interest--count');

        // 2. 현재 카운트 숫자를 가져옵니다.
        let interestCount = parseInt(interestCountElement.textContent);

        // 3. 'checked' 클래스가 있는지 확인하여 "좋아요" 상태를 판단합니다.
        if (selectedPost.classList.contains('checked')) {
            // 이미 좋아요를 누른 상태일 경우 (취소)
            interestCount--; // 카운트 1 감소
            selectedPost.classList.remove('checked', 'text-pink-500'); // 'checked' 클래스와 분홍색 클래스 제거
        } else {
            // 좋아요를 누르지 않은 상태일 경우
            interestCount++; // 카운트 1 증가
            selectedPost.classList.add('checked', 'text-pink-500'); // 'checked' 클래스와 분홍색 클래스 추가
        }

        // 4. 변경된 카운트 숫자를 다시 화면에 표시합니다.
        interestCountElement.textContent = interestCount;
    }
</script>

