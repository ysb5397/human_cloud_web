{{> layout/header}}

<div class="isolate bg-white px-6 py-24 sm:py-32 lg:px-8">
    <!-- 배경 효과 -->
    <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
        <div class="relative left-1/2 -z-10 aspect-[1155/678] w-[72.0625rem] max-w-none -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30"
             style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
        </div>
    </div>

    <!-- 제목 -->
    <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl">기업회원가입</h2>
        <p class="mt-2 text-lg text-gray-600">회원가입을 해주세요.</p>
    </div>

    <form id="companyForm" action="/company/signup" method="POST" class="mx-auto mt-10 max-w-xl">
        <div class="grid grid-cols-1 gap-y-6">
            <div>
                <label for="companyName" class="block text-sm font-semibold text-gray-900">회사명</label>
                <input type="text" name="companyName" id="companyName" {{#joinDTO}}value="{{joinDTO.companyName}}"{{/joinDTO}} autocomplete="companyName"
                       class="mt-2.5 block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600" />
                {{#message.companyName}}
                    <div class="mt-2 rounded-md border-l-4 border-red-500 bg-red-50 p-3">
                        <div class="flex items-center gap-x-3">
                            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                            </svg>
                            <p class="text-sm font-medium text-red-700">
                                {{message.companyName}}
                            </p>
                        </div>
                    </div>
                {{/message.companyName}}
            </div>
            <div>
                <label for="password" class="block text-sm font-semibold text-gray-900">비밀번호</label>
                <input type="password" name="password" id="password" {{#joinDTO}}value="{{joinDTO.password}}"{{/joinDTO}} autocomplete="password"
                       class="mt-2.5 block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600" />
                {{#message.password}}
                    <div class="mt-2 rounded-md border-l-4 border-red-500 bg-red-50 p-3">
                        <div class="flex items-center gap-x-3">
                            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                            </svg>
                            <p class="text-sm font-medium text-red-700">
                                {{message.password}}
                            </p>
                        </div>
                    </div>
                {{/message.password}}
            </div>
            <div>
                <label for="repeatPW" class="block text-sm font-semibold text-gray-900">비밀번호 확인</label>
                <input type="password" name="repeatPW" id="repeatPW" {{#joinDTO}}value="{{joinDTO.repeatPW}}"{{/joinDTO}}
                       class="mt-2.5 block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600" />
                {{#message.repeatPW}}
                    <div class="mt-2 rounded-md border-l-4 border-red-500 bg-red-50 p-3">
                        <div class="flex items-center gap-x-3">
                            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                            </svg>
                            <p class="text-sm font-medium text-red-700">
                                {{message.repeatPW}}
                            </p>
                        </div>
                    </div>
                {{/message.repeatPW}}
            </div>
            <div>
                <label for="address" class="block text-sm font-semibold text-gray-900">주소</label>
                <input type="text" name="address" id="address" {{#joinDTO}}value="{{joinDTO.address}}"{{/joinDTO}} autocomplete="address"
                       class="mt-2.5 block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600" />
                {{#message.address}}
                    <div class="mt-2 rounded-md border-l-4 border-red-500 bg-red-50 p-3">
                        <div class="flex items-center gap-x-3">
                            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                            </svg>
                            <p class="text-sm font-medium text-red-700">
                                {{message.address}}
                            </p>
                        </div>
                    </div>
                {{/message.address}}
            </div>
            <div>
                <label for="businessRegistrationNumber" class="block text-sm font-semibold text-gray-900">사업자 번호</label>
                <input type="text" name="businessRegistrationNumber" id="businessRegistrationNumber" {{#joinDTO}}value="{{joinDTO.businessRegistrationNumber}}"{{/joinDTO}}
                       class="mt-2.5 block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600" />
                {{#message.businessRegistrationNumber}}
                    <div class="mt-2 rounded-md border-l-4 border-red-500 bg-red-50 p-3">
                        <div class="flex items-center gap-x-3">
                            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                            </svg>
                            <p class="text-sm font-medium text-red-700">
                                {{message.businessRegistrationNumber}}
                            </p>
                        </div>
                    </div>
                {{/message.businessRegistrationNumber}}
            </div>
            <div>
                <label for="email" class="block text-sm font-semibold text-gray-900">이메일</label>
                <input type="text" name="email" id="email" {{#joinDTO}}value="{{joinDTO.email}}"{{/joinDTO}} autocomplete="email"
                       class="mt-2.5 block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600" />
                {{#message.email}}
                    <div class="mt-2 rounded-md border-l-4 border-red-500 bg-red-50 p-3">
                        <div class="flex items-center gap-x-3">
                            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                            </svg>
                            <p class="text-sm font-medium text-red-700">
                                {{message.email}}
                            </p>
                        </div>
                    </div>
                {{/message.email}}
            </div>
        </div>
        <div class="mt-10">
            <button type="submit"
                    class="block w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                회원가입
            </button>
        </div>
        <div class="mt-4 text-center">
            <p class="text-base text-gray-600">기업 회원이 아니신가요?<a href="/user/signup-form" class="ml-2 text-indigo-600 underline">개인회원 가입하기</a></p>
        </div>
        <div class="mt-4 text-center">
            <p class="text-base text-gray-600">이미 계정이 있으신가요?<a href="/user/login-form" class="ml-2 text-indigo-600 underline">로그인 하기</a></p>
        </div>
    </form>
</div>
</body>

{{> layout/footer}}