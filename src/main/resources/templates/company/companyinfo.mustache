{{> layout/header}}

<div class="container mx-auto px-4 py-8 max-w-3xl relative z-10">
    <div id="modal" class="rating--modal fixed inset-0 z-10 flex items-center justify-center transition-all duration-300 ease-out opacity-0 scale-95 pointer-events-none">
        <div class="fixed -inset-50 bg-gray-500/75 transition-opacity" aria-hidden="true"></div>

        <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
            <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
                <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
                    <div class="bg-white px-6 pt-5 pb-4">
                        <div class="flex flex-col sm:flex sm:items-start">
                            <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                                <h3 class="text-lg font-semibold leading-6 text-gray-900" id="dialog-title">평점 남기기</h3>
                                <p class="mt-1 text-sm text-gray-500">회사에 남길 평점을 선택해주세요.</p>
                            </div>
                            <form action="/user/rating" method="POST" class="flex flex-col w-full mt-4">
                                <input id="companyId" name="companyId" value="" hidden>
                                <div class="flex flex-row w-full gap-4 ml-2">
                                    <input id="rate--input" name="rating" value="1" hidden>
                                    <button type="button" class="cursor-pointer">
                                        <svg xmlns="http://www.w3.org/2000/svg" onclick="rating(this)" data-rate="1" fill="#FFD700" stroke="#FFD700" stroke-width="2" viewBox="0 0 24 24" width="36" height="36" class="star">
                                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87L18.18 22 12 18.56 5.82 22 7 14.14l-5-4.87 6.91-1.01L12 2z"/>
                                        </svg>
                                    </button>
                                    <button type="button" class="cursor-pointer">
                                        <svg xmlns="http://www.w3.org/2000/svg" onclick="rating(this)" data-rate="2" fill="none" stroke="#FFD700" stroke-width="2" viewBox="0 0 24 24" width="36" height="36" class="star">
                                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87L18.18 22 12 18.56 5.82 22 7 14.14l-5-4.87 6.91-1.01L12 2z"/>
                                        </svg>
                                    </button>
                                    <button type="button" class="cursor-pointer">
                                        <svg xmlns="http://www.w3.org/2000/svg" onclick="rating(this)" data-rate="3" fill="none" stroke="#FFD700" stroke-width="2" viewBox="0 0 24 24" width="36" height="36" class="star">
                                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87L18.18 22 12 18.56 5.82 22 7 14.14l-5-4.87 6.91-1.01L12 2z"/>
                                        </svg>
                                    </button>
                                    <button type="button" class="cursor-pointer">
                                        <svg xmlns="http://www.w3.org/2000/svg" onclick="rating(this)" data-rate="4" fill="none" stroke="#FFD700" stroke-width="2" viewBox="0 0 24 24" width="36" height="36" class="star">
                                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87L18.18 22 12 18.56 5.82 22 7 14.14l-5-4.87 6.91-1.01L12 2z"/>
                                        </svg>
                                    </button>
                                    <button type="button" class="cursor-pointer">
                                        <svg xmlns="http://www.w3.org/2000/svg" onclick="rating(this)" data-rate="5" fill="none" stroke="#FFD700" stroke-width="2" viewBox="0 0 24 24" width="36" height="36" class="star">
                                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87L18.18 22 12 18.56 5.82 22 7 14.14l-5-4.87 6.91-1.01L12 2z"/>
                                        </svg>
                                    </button>
                                </div>
                                <div class="mt-4">
                                    <textarea name="comment" id="comment" rows="3" placeholder="의견을 남겨주세요." class="resize-none block w-full rounded-md bg-white px-3.5 py-2.5 text-gray-900 border border-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"></textarea>
                                </div>
                                <div class="mt-4 flex flex-row justify-end w-full gap-4">
                                    <button type="button" onclick="toggleModal(false); document.querySelector('html').classList.toggle('overflow-hidden');" class="px-4 py-2 text-sm bg-gray-100 rounded hover:bg-gray-200">취소</button>
                                    <button type="submit" id="send--rating--btn" value="" onclick="toggleButton(this)" class="inline-block px-4 py-2 bg-green-600 text-white text-sm font-medium rounded hover:bg-green-500">평가 보내기</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{#companyList}}
        <div id="{{id}}" class="bg-white shadow-md rounded-xl p-6 mb-6 hover:shadow-lg transition-shadow cursor-pointer">
            <h4 class="text-xl font-semibold mb-2">{{companyName}}</h4>
            <p class="text-sm text-gray-500 mb-4">{{companyName}}&nbsp;{{address}}&nbsp;{{email}}</p>
            <div class="flex flex-row gap-6">
                <a href="{{websiteUrl}}" target="_blank" rel="noopener noreferrer" class="inline-block px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded hover:bg-indigo-500">
                    상세보기
                </a>
                <button id="rating--btn" type="button" onclick="toggleModal(true); moveValue({{id}}); document.querySelector('html').classList.toggle('overflow-hidden');" class="inline-block px-4 py-2 bg-green-600 text-white text-sm font-medium rounded hover:bg-green-500">평점 남기기</button>
            </div>
        </div>
    {{/companyList}}

    <!-- 페이지네이션 -->
    <div class="flex justify-center space-x-2 mt-8">
        <button class="px-4 py-2 text-sm text-gray-400 bg-gray-200 rounded cursor-not-allowed">이전</button>
        <button class="px-4 py-2 text-sm text-indigo-600 bg-indigo-100 rounded hover:bg-indigo-200">다음</button>
    </div>
</div>

<script>
    function rating(star) {
        for (let i = 0; i < 5; i++) {
            document.getElementsByClassName('star')[i].setAttribute('fill', 'none');
        }

        let starNumber = star.getAttribute('data-rate');

        for (let i = 0; i < starNumber; i++) {
            document.getElementsByClassName('star')[i].setAttribute('fill', '#FFD700');
        }
        document.getElementById('rate--input').setAttribute('value', starNumber);
    }

    function toggleModal(show) {
        const modal = document.getElementById("modal");

        if (show) {
            modal.classList.remove("opacity-0", "scale-95", "pointer-events-none");
            modal.classList.add("opacity-100", "scale-100");
        } else {
            modal.classList.add("opacity-0", "scale-95", "pointer-events-none");
            modal.classList.remove("opacity-100", "scale-100");
        }
    }

    function moveValue(companyId) {
        document.getElementById('companyId').setAttribute('value', companyId);
        document.getElementById('send--rating--btn').setAttribute('value', companyId);
    }

    function toggleButton(button) {
        let comId = button.getAttribute('value');
        let item = document.getElementById(comId);
    }
</script>
{{> layout/footer}}
