{{> layout/header}}

<section class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold mb-6">내가 구독한 기업 목록</h2>

    {{#subcompanylist.size}}
        <ul class="space-y-4">
            {{#subcompanylist}}
                <li class="p-4 border rounded shadow flex justify-between items-center">
                    <div>
                        <h3 class="text-xl font-semibold">{{company.name}}</h3>
                    </div>
                    <a href="/companyinfo/{{id}}" class="text-blue-600 hover:underline">기업 상세보기</a>
                </li>
            {{/subcompanylist}}
        </ul>
    {{/subcompanylist.size}}

    {{^subcompanylist.size}}
        <p class="text-gray-500">구독한 기업이 없습니다.</p>
    {{/subcompanylist.size}}

</section>

{{> layout/footer}}