{{> layout/header}}

<section class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold mb-6">내가 구독한 기업 목록</h2>

    {{#subcompanylist}}
        <ul class="space-y-4">
            <li class="p-4 border rounded shadow flex justify-between items-center">
                <div>
                    <h3 class="text-xl font-semibold">{{companyName}}</h3>
                </div>
                <div class="flex flex-row gap-4">
                    <form action="/user/usersub/cancel" method="POST" class="text-red-600 hover:underline">
                        <input name="id" value="{{id}}" hidden>
                        <input name="loc" value="/user/user-sub-list" hidden>
                        <button type="submit" onclick="return confirm('정말 취소하시겠습니까?');">구독 취소</button>
                    </form>
                    <a href="{{websiteUrl}}" class="text-blue-600 hover:underline">기업 상세보기</a>
                </div>
            </li>
        </ul>
    {{/subcompanylist}}

    {{^subcompanylist}}
        <p class="text-gray-500">구독한 기업이 없습니다.</p>
    {{/subcompanylist}}

</section>

{{> layout/footer}}